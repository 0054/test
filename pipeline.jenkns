#!groovy
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }
    options {
        timestamps()
    }
    stages {
        stage ('Get latest code') {
            steps {
                checkout scm
            }
        }
        stage ('run tests') {
            steps {
                sh '''
                    /usr/local/bin/virtualenv .venv
                    . .venv/bin/activate
                    pip install -r requirements.txt
                    py.test
                '''
            }
        }
        stage ('build') {
            steps {
                sh '''
                    ssh amsterdam mkdir /tmp/build || true
                    ssh amsterdam git clone https://github.com/0054/test.git /tmp/build
                    ssh amsterdam bash /tmp/build/test/build.sh
                    ssh amsterdam rm -rf /tmp/build/ || true
                    '''
            }
        }
        stage('deploy') {
            steps {
                sh '''
                    ssh amsterdam docker stop api || true
                    ssh amsterdam docker rm api || true
                    ssh amsterdam docker run -d -p 5000:5000 flask_app api
                    '''
            }
        }
    }
}
