#!groovy
properties([disableConcurrentBuilds()])

pipeline {
    agent {
        label 'master'
    }
    options {
        timestamps()
    }
    stages {
        stage ('Get latest code') {
            steps {
                checkout scm
            }
        }
        stage ('run tests') {
            steps {
                sh '''
                    /usr/local/bin/virtualenv .venv
                    . .venv/bin/activate
                    pip install -r requirements
                    py.test
                '''
            }
        }
    }
}
